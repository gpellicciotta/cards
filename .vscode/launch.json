  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8066/seven-wonders.html",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--disable-web-security",
        "--auto-open-devtools-for-tabs"
      ] // Otherwise CORS will be an issue      
    }
  ]
}